[core]
    askpass = git-gui--askpass
    pager = less -x1,5

[user]
    name = Rossen Georgiev
    email = rossen@rgp.io

[color]
    diff = auto
    status = auto
    branch = auto

[credential]
    helper = cache --timeout=1800

[alias]
    lg1 = log --graph --date-order --date=relative --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit
    lg2 = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(bold white)— %an%C(reset)' --abbrev-commit
    lg3 = log --pretty='%h - %s'
    lg = !"git lg1"
    rms = "!f(){ git rm --cached \"$1\";rm -r \"$1\";git config -f .gitmodules --remove-section \"submodule.$1\";git config -f .git/config --remove-section \"submodule.$1\";git add .gitmodules; }; f"
    dt = difftool
    tt = difftool -y -t vimdiff

[diff]
    vim = vimdiff

[push]
    default = simple
