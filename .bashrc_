export PS1="\[\e]0;\w\a\]\n\[\e[32m\]\u@\h \[\e[33m\]\w\[\e[0m\] \$ "
export EDITOR="vim"
export LESS="-RMi"

alias ls="ls --color=auto"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias calc='python3 -ic "from math import *; import cmath"'

test -f ~/.ssh-agent ~/bin/terraform && complete -C ~/bin/terraform terraform
test -f ~/.ssh-agent && source ~/.ssh-agent

# allow vim highlighting to work in tmux
alias tmux='tmux -2'
